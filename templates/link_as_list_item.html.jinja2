<li class="link">
  <div class="favicon" style="background-image:url(https://www.google.com/s2/favicons?domain={{ link.url }})"></div>
  <div class="content">
    <a class="title" href="{{ root_path }}{{ link.file_path}}">{{ link.title }}</a> <span class="desc">{{ link.desc }}</span>
    {% if include_category %}
      {% with category = categories[link.category_str] %}
        <p><a href="{{ root_path }}{{ category.path }}index.html">{{link.category_str}}</a></p>
      {% endwith %}
    {% endif %}
  </div>
</li>

